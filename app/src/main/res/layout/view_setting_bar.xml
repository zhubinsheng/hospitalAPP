<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/space_30"
        android:layout_marginBottom="@dimen/space_30"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/space_40"
        android:paddingEnd="@dimen/space_40">

        <TextView
            android:id="@+id/tv_setting_bar_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/space_30"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_30px" />

        <TextView
            android:id="@+id/tv_setting_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/space_30"
            android:gravity="center_vertical"
            android:textColor="@color/black40"
            android:textSize="@dimen/font_size_28px" />
    </LinearLayout>

    <View
        android:id="@+id/v_setting_bar_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="#ececec" />
</FrameLayout>